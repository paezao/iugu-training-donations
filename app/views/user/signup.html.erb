<div class="container">
  <form id="signup-form" action=<%= user_register_url %> method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="form-group">
      <label>E-mail</label>
      <input type="email" class="form-control" name="user[email]">
    </div>
    <div class="form-group">
      <label>Senha</label>
      <input type="password" class="form-control" name="user[password]">
    </div>
    <div class="form-group">
      <label>Confirmação de Senha</label>
      <input type="password" class="form-control" name="user[password_confirmation]">
    </div>
    <div><button class="btn btn-block btn-success btn-lg" type="submit">Registrar</button></div>
  </form>
</div>
